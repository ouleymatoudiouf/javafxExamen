<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="300.0" spacing="20.0"
      style="-fx-background-color: #e2e0e0;"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sn.ouleymatou.hotelmanagement.controllers.LoginController">

    <children>
        <!-- En-tête avec logo et titres -->
        <VBox alignment="CENTER" prefHeight="150.0" prefWidth="150.0" spacing="5">
            <children>
                <Label style="-fx-font-size: 36px;" text="🏨" />
                <Text text="ROYAL PALACE HOTEL">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Text>
                <Text fill="#7f8c8d" text="Système de Gestion Hôtelière">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>
            </children>
        </VBox>

        <!-- Formulaire de connexion -->
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="500.0" spacing="20.0"
              style="-fx-background-color: #ffffff; -fx-background-radius: 10;">
            <padding>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
            </padding>
            <children>
                <!-- Champ Email -->
                <VBox maxWidth="250.0" prefHeight="100.0" spacing="10">
                    <Text text="Email :" />
                    <TextField fx:id="emailField" />
                </VBox>

                <!-- Champ Mot de passe -->
                <VBox maxWidth="250.0" prefHeight="150.0" spacing="10">
                    <Text text="Mot de passe :" />
                    <PasswordField fx:id="passwordField" />
                    <TextField fx:id="passwordVisibleField" visible="false" managed="false" />
                    <CheckBox fx:id="showPasswordCheckBox" text="Afficher le mot de passe" />
                </VBox>

                <!-- Message d’erreur -->
                <Label fx:id="errorLabel" textFill="#e71212" wrapText="true" />

                <!-- Bouton de connexion -->
                <Button fx:id="loginBtn" alignment="CENTER" onAction="#handleLogin" prefWidth="200.0"
                        style="-fx-background-color: #2a76fa; -fx-background-radius: 20;"
                        text="Se connecter" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" top="1.0" />
            </VBox.margin>
        </VBox>
    </children>
</VBox>
